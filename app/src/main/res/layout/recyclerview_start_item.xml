<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/one_five_zero"
    android:elevation="@dimen/two"
    app:cardCornerRadius="@dimen/one_zero">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="@dimen/one_five_zero"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/five"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="@dimen/four"
            android:textSize="@dimen/two_zero_sp"
            app:layout_constraintLeft_toRightOf="@+id/poster"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="@dimen/four"
            android:textSize="@dimen/two_zero_sp"
            app:layout_constraintLeft_toRightOf="@+id/poster"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="Title" />

        <TextView
            android:id="@+id/description"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/zero"
            android:padding="@dimen/five"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/poster"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_name"
            tools:text="@tools:sample/lorem/random" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>